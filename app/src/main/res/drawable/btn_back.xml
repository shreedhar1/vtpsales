<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/primary"/>
            <stroke
                android:width="2dp"
                android:color="@color/primary"/>
            <corners
                android:radius="@dimen/_5sdp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/primary"
                android:startColor="@color/primary"/>
            <stroke
                android:width="4dp"
                android:color="@color/primary"/>
            <corners
                android:radius="@dimen/_5sdp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>