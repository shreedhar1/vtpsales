<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportsDetListActivity">

    <include
        android:id="@+id/laybar"
        layout="@layout/app_bar_main"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        >
        <TextView
            android:id="@+id/txt_TotalAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$1200000"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/light_blue_900"
            />
        <TextView
            android:id="@+id/txt_Dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/medium_grey"
            android:fontFamily="@font/poppins_medium"
            android:text="01 APR 23 to 31 MAR 24"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_custName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANISH ENTERPRISES"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/poppins"
        android:paddingStart="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/medium_grey"
        />
<!--    <com.github.mikephil.charting.charts.HorizontalBarChart-->
<!--        android:id="@+id/barchart"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/_200sdp"-->
<!--        />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group By"
            android:gravity="center"
            android:background="@color/light_blue_900"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15dp"
            android:padding="@dimen/_10sdp"
            android:layout_weight="1"
            />
        <RelativeLayout
            android:id="@+id/btn_Sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/txtselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Bills"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/txtselect"
                android:backgroundTint="@color/medium_grey"
                android:gravity="end"
                android:src="@drawable/baseline_arrow_drop_down_24" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/medium_grey"
        />
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/idBarChart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



</LinearLayout>