<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_BPName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_14sdp"
                android:gravity="end"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posting Date : "
                android:textSize="@dimen/_12sdp"
                android:gravity="end"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_PostingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:gravity="end"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/medium_grey"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VTP Doc No : "
                android:textSize="@dimen/_12sdp"
                android:gravity="end"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_VTPDocno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:gravity="end"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/medium_grey"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doc No : "
                android:textSize="@dimen/_12sdp"
                android:gravity="end"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_Docno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:gravity="end"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/medium_grey"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount : "
                android:textSize="@dimen/_12sdp"
                android:gravity="start"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txtTotalAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:gravity="end"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/medium_grey"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>