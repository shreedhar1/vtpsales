<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment" >

    <androidx.cardview.widget.CardView
        android:elevation="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emp Name: "
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"

                />
            <TextView
                android:id="@+id/txt_empName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/light_blue_A400"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginEnd="@dimen/_3sdp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emp Code: "
               
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginEnd="@dimen/_3sdp"
                />
            <TextView
                android:id="@+id/txt_empCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/light_blue_A400"
               
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginEnd="@dimen/_3sdp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name: "
               
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginEnd="@dimen/_3sdp"
                />
            <TextView
                android:id="@+id/txt_empCom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_A400"
               
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginEnd="@dimen/_3sdp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mob No. : "
               
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginEnd="@dimen/_3sdp"
                />
            <TextView
                android:id="@+id/txt_empMob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_A400"
               
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginEnd="@dimen/_3sdp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID: "
               
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginEnd="@dimen/_3sdp"
                />
            <TextView
                android:id="@+id/txt_empEmailid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_A400"
               
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:layout_marginEnd="@dimen/_3sdp"
                />


        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>