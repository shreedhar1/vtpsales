<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="false"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".AttendenceListActivity">

    <include
        android:id="@+id/laybar"
        layout="@layout/app_bar_main"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/laybar"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_3sdp"

                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_back"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_1sdp"

                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_weight="0.3"
                        >
                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/baseline_filter_list_24"
                            app:tint="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Filter"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"
                            android:layout_marginLeft="@dimen/_5sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.7"
                        >

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginLeft="@dimen/_3sdp"

                            android:theme="@style/DrpStyle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select Company"
                            >

                            <AutoCompleteTextView
                                android:fontFamily="@font/poppins"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtFromDate"
                        android:theme="@style/EditextStyle2"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:padding="0dp"
                        android:layout_height="wrap_content"
                        android:hint="From Date">

                        <com.google.android.material.textfield.TextInputEditText
                            android:enabled="false"
                            android:fontFamily="@font/poppins"
                            android:drawableEnd="@drawable/baseline_calendar_month_24"
                            android:layout_width="match_parent"
                            android:drawableTint="@color/medium_grey"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:id="@+id/textField"
                        android:theme="@style/EditextStyle2"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:hint="To Date">

                        <com.google.android.material.textfield.TextInputEditText
                            android:enabled="false"
                            android:fontFamily="@font/poppins"
                            android:drawableEnd="@drawable/baseline_calendar_month_24"
                            android:drawableTint="@color/medium_grey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>