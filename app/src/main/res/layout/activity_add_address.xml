<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_margin="@dimen/_10sdp"
    tools:context=".Add_Address">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/laybar"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD ADDRESS"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_8sdp"
                    android:gravity="center"
                    android:textColor="@color/light_blue_900"
                    android:fontFamily="@font/poppins"
                    android:textSize="@dimen/_14sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    >
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Street ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edStreet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Block">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edBlock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=" State ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilLead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=" Country ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Zipcode">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edZipcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                 android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                  >

                  <androidx.cardview.widget.CardView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                     android:layout_weight="1"
                      app:cardCornerRadius="@dimen/_5sdp"
                      android:layout_margin="10sp"
                      >
                      <TextView
                          android:id="@+id/txtCancel"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Cancel"
                          android:gravity="center"
                      android:padding="@dimen/_10sdp"
                      android:textColor="@color/light_blue_900"
                      />

                  </androidx.cardview.widget.CardView>
                  <androidx.cardview.widget.CardView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      app:cardCornerRadius="@dimen/_5sdp"
                      android:elevation="@dimen/_5sdp"
                      android:layout_margin="10sp"
                      >
                      <TextView
                          android:id="@+id/txtSubmit"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Submit"
                          android:gravity="center"
                          android:padding="@dimen/_10sdp"
                          android:textColor="@color/white"
                          android:background="@color/light_blue_900"
                          />

                  </androidx.cardview.widget.CardView>
              </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
