<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportsActivity">

    <include
        android:id="@+id/laybar"
        layout="@layout/app_bar_main"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:visibility="gone"
        android:id="@+id/spinner_SlpName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/spinner_border_black"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtFromDate"
            android:theme="@style/EditextStyle2"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:padding="0dp"
            android:onClick="fromDatepicker"
            android:layout_height="wrap_content"
            android:hint="From Date">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_fromDate"
                android:focusable="false"
                android:textSize="@dimen/_12sdp"

                android:fontFamily="@font/poppins_medium"
                android:drawableEnd="@drawable/baseline_calendar_month_24"
                android:layout_width="match_parent"
                android:drawableTint="@color/medium_grey"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginLeft="@dimen/_3sdp"
            android:id="@+id/txtToDate"
            android:theme="@style/EditextStyle2"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:hint="To Date">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_toDate"
                android:focusable="false"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                android:drawableEnd="@drawable/baseline_calendar_month_24"
                android:drawableTint="@color/medium_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/lay_sales"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/_20sdp"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/img_sales"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:tint="@color/light_blue_900" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/txt_salestitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/txt_salesdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/medium_grey"
                            android:fontFamily="@font/poppins_medium"
                            android:text=""
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/medium_grey"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_purchase"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/_20sdp"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/img_purchase"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:tint="@color/light_blue_900" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/txt_purchasetitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/txt_purchasedesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/medium_grey"
                            android:fontFamily="@font/poppins_medium"
                            android:text=""
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/medium_grey"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_receipt"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/_20sdp"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/img_receipt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:tint="@color/light_blue_900" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/txt_receiptitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/txt_receiptdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/medium_grey"
                            android:fontFamily="@font/poppins_medium"
                            android:text=""
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/medium_grey"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_Outstandings"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/_20sdp"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/img_Outstandings"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:tint="@color/light_blue_900" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/txt_Outstandingstitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/txt_Outstandingsdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/medium_grey"
                            android:fontFamily="@font/poppins_medium"
                            android:text=""
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/medium_grey"
                    />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>